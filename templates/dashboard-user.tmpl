<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script
            src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4">
        </script>
        <title>Dashboard - Waste2Feed</title>
        <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: #F5F7E7;
            min-height: 100vh;
        }
        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 24px 20px 0 20px;
        }
        .greeting {
            font-size: 20px;
            color: #5B7B3A;
            font-weight: 500;
        }
        .greeting b {
            color: #2E7D32;
        }
        .profile-img {
            width: 38px;
            height: 38px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #8CB97A;
            cursor: pointer;
        }
        .main {
            padding: 0 20px;
        }
        .stats {
            display: flex;
            gap: 16px;
            margin: 24px 0 18px 0;
        }
        .stat-box {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            padding: 16px 18px;
            flex: 1;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .stat-label {
            font-size: 14px;
            color: #5B7B3A;
        }
        .stat-value {
            font-size: 18px;
            font-weight: bold;
            color: #2E7D32;
        }
        .main-img {
            width: 100%;
            max-width: 320px;
            border-radius: 16px;
            margin: 0 auto 18px auto;
            display: block;
        }
        .menu {
            display: flex;
            flex-wrap: wrap;
            gap: 18px;
            justify-content: center;
            margin-top: 10px;
        }
        .menu-item {
            width: 140px;
            height: 110px;
            background: #8CB97A;
            border-radius: 12px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #234B1C;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            transition: background 0.2s;
        }
        .menu-item:hover {
            background: #7da37a;
        }
        .sidebar {
            position: fixed;
            top: 0;
            right: -100vw;
            width: 85vw;
            max-width: 370px;
            height: 100vh;
            background: #fff;
            box-shadow: -2px 0 16px rgba(0,0,0,0.08);
            z-index: 100;
            transition: right 0.3s cubic-bezier(.4,0,.2,1);
            padding: 0 0 0 0;
            overflow-y: auto;
        }
        .sidebar.open {
            right: 0;
        }
        .sidebar-header {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 32px 24px 0 24px;
        }
        .sidebar-profile-img {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #8CB97A;
        }
        .sidebar-user-info {
            display: flex;
            flex-direction: column;
        }
        .sidebar-user-name {
            font-size: 18px;
            color: #2E7D32;
            font-weight: bold;
        }
        .sidebar-user-phone {
            font-size: 15px;
            color: #5B7B3A;
        }
        .sidebar-section-title {
            font-size: 16px;
            color: #2E7D32;
            font-weight: bold;
            margin: 28px 0 8px 24px;
        }
        .sidebar-address-box {
            background: #E6F2D6;
            border-radius: 8px;
            padding: 12px 16px;
            margin: 0 24px 12px 24px;
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }
        .sidebar-address-icon {
            color: #E53935;
            font-size: 22px;
            margin-top: 2px;
        }
        .sidebar-address-content {
            font-size: 14px;
            color: #234B1C;
        }
        .sidebar-add-address {
            background: #FFF9C4;
            border-radius: 8px;
            padding: 12px 16px;
            margin: 0 24px 12px 24px;
            color: #A5A500;
            font-size: 15px;
            cursor: pointer;
        }
        .sidebar-menu {
            margin: 0 0 0 0;
            padding: 0;
            list-style: none;
        }
        .sidebar-menu li {
            display: flex;
            align-items: center;
            gap: 14px;
            padding: 14px 24px;
            font-size: 16px;
            color: #234B1C;
            border-bottom: 1px solid #F0F0F0;
            cursor: pointer;
        }
        .sidebar-menu li:last-child {
            border-bottom: none;
        }
        .sidebar-menu-icon {
            font-size: 20px;
            color: #2E7D32;
        }
        .sidebar-close {
            position: absolute;
            left: -18px;
            top: 32px;
            background: #fff;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            cursor: pointer;
            z-index: 101;
        }
        swiper-container::part(button-prev),
        swiper-container::part(button-next) {
            color: #005eff; /* Tailwind gray-400 */
        }

        swiper-container::part(pagination) {
            position: absolute;
            bottom: -3px; /* atau 50px atau 100px sesuai kebutuhan */
            text-align: center;
        }


        swiper-container::part(bullet) {
            background-color: white;
            box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
            opacity: 1;
            width: 10px;
            height: 10px;
            margin: 0px 0px 1px 6px;
            border-radius: 9999px;
            transition: background-color 1s ease;
        }

        swiper-container::part(bullet-active) {
            background-color: whitesmoke;
            border: 2px solid white;
            box-shadow: 0 0 4px rgba(0, 0, 0, 0.405);
            transform: scale(1);
            border-radius: 9999px;
        }


    </style>
        <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    </head>
    <body>
        <div class="absolute top-0 align-center w-full h-36 bg-[#0B4619] z-0 rounded-b-2xl"/>
        <div class="relative z-10 mt-6">
            <div class="header">
                <div class="text-white text-xl" id="greeting">Hallo! <b>User</b></div>
                <img src="/static/tmp.png" alt="Profile" class="profile-img"
                    id="profileBtn">
            </div>
            <div class="main">
                <div class="stats">
                    <div class="stat-box">
                        <img src="/static/coin 2.png" alt="Poin" height="40px"
                            width="40px">
                        <div class="w-full">
                            <div class="text-right">Total Poin</div>
                            <div class="text-right stat-value"
                                id="totalPoints">-</div>
                        </div>
                    </div>
                    <div class="stat-box">
                        <img src="/static/recycling-bag 1.png" alt="Sampah"
                            height="40px" width="40px">
                        <div>
                            <div class="stat-label">Total Sampah</div>
                            <div class="stat-value">100 Kg</div>
                        </div>
                    </div>
                </div>
                <div class="w-full flex justify-center items-center py-8">
                    <swiper-container
                        slides-per-view="1"
                        pagination="true"
                        loop="true"
                        autoplay="true"
                        autoplay-delay="4000"
                        class="rounded-xl"
                        style="width: 100%; max-width: 600px; height: 180px;"
                        id="swiperTarget"></swiper-container>
                </div>
    
                <div class="menu">
                    <div>
                        <div class="menu-item" onclick="location.href='/pick-up'">
                            <img
                                src="/static/truck-kun.png"
                                alt="Pick-Up Sampah">
                        </div>
                        <div
                            class="text-sm text-[#0B4619] font-bold text-center">Pick-Up
                            Sampah</div>
                    </div>
                    <div>
                        <div class="menu-item" onclick="location.href='/history'">
                            <img
                                src="/static/pick-up-history.png"
                                alt="Komunitas"
                                class="translate-x-1">
                        </div>
                        <div
                            class="text-sm text-[#0B4619] font-bold text-center">Riwayat
                            Pick-Up</div>
                    </div>
                    <div>
                        <div class="menu-item" onclick="location.href='/history'">
                            <img
                                src="/static/achievement-icon.png"
                                alt="Komunitas"
                                class="translate-x-1">
                        </div>
                        <div
                            class="text-sm text-[#0B4619] font-bold text-center">Riwayat
                            Pick-Up</div>
                    </div>
                    <div>
                        <div class="menu-item" onclick="location.href='/redeem'">
                            <img
                                src="/static/exchange-poin.png"
                                alt="Komunitas"
                                class="translate-x-1">
                        </div>
                        <div
                            class="text-sm text-[#0B4619] font-bold text-center">Tukar
                            Poin</div>
                    </div>
    
                </div>
            </div>
            <!-- Sidebar Overlay -->
            <div id="sidebarOverlay"
                style="display:none;position:fixed;top:0;left:0;width:100vw;height:100vh;background:rgba(0,0,0,0.08);z-index:99;"></div>
            <!-- Sidebar -->
            <div class="sidebar" id="sidebar">
                <div class="sidebar-close" id="sidebarClose"><i
                        class="fa fa-arrow-left"></i></div>
                <div class="sidebar-header">
                    <img src="/static/tmp.png" alt="Profile"
                        class="sidebar-profile-img" id="sidebarProfileImg">
                    <div class="sidebar-user-info">
                        <div class="sidebar-user-name"
                            id="sidebarUserName">User</div>
                        <div class="sidebar-user-phone"
                            id="sidebarUserPhone">+628xxxxxxxxxx</div>
                    </div>
                </div>
                <div class="sidebar-section-title">Alamat</div>
                <div class="sidebar-address-box">
                    <span class="sidebar-address-icon"><i
                            class="fa fa-map-marker-alt"></i></span>
                    <div class="sidebar-address-content" id="sidebarAddress">-</div>
                </div>
                <div class="sidebar-add-address">+ Tambah Alamat</div>
                <div class="sidebar-section-title">Pengaturan</div>
                <ul class="sidebar-menu">
                    <li onclick="location.href='/profile'"><span
                            class="sidebar-menu-icon"><i
                                class="fa fa-user"></i></span> Profil Anda</li>
                    <li onclick="location.href='/history'"><span
                            class="sidebar-menu-icon"><i
                                class="fa fa-history"></i></span> Riwayat
                        Penjemputan</li>
                    <li><span class="sidebar-menu-icon"><i
                                class="fa fa-question-circle"></i></span> FAQ</li>
                    <li onclick="logout()"><span class="sidebar-menu-icon"><i
                                class="fa fa-sign-out-alt"></i></span> Logout</li>
                </ul>
            </div>
        </div>
        <script>
    // Sidebar logic
    const sidebar = document.getElementById('sidebar');
    const profileBtn = document.getElementById('profileBtn');
    const sidebarClose = document.getElementById('sidebarClose');
    const sidebarOverlay = document.getElementById('sidebarOverlay');
    profileBtn.onclick = () => {
        sidebar.classList.add('open');
        sidebarOverlay.style.display = 'block';
    };
    sidebarClose.onclick = () => {
        sidebar.classList.remove('open');
        sidebarOverlay.style.display = 'none';
    };
    sidebarOverlay.onclick = () => {
        sidebar.classList.remove('open');
        sidebarOverlay.style.display = 'none';
    };

    // Fetch user data
    function fetchUserData() {
        const token = localStorage.getItem('jwt');
        fetch('/api/user/me', {
            headers: {
                'Authorization': token ? `Bearer ${token}` : ''
            }
        })
        .then(res => res.json())
        .then(data => {
            if (data.status && data.data) {
                document.getElementById('greeting').innerHTML = `Hallo! <b>${data.data.username || 'User'}</b>`;
                document.getElementById('totalPoints').textContent = data.data.points?.toLocaleString('id-ID') || '0';
                document.getElementById('sidebarUserName').textContent = data.data.username || 'User';
                let contact = data.data.email ? data.data.email : (data.data.phone_number ? data.data.phone_number : '-');
                document.getElementById('sidebarUserPhone').textContent = contact;
                document.getElementById('sidebarAddress').textContent = data.data.address || '-';
            }
        });
    }
    fetchUserData();

    // Logout
    function logout() {
        document.cookie = "jwt=; path=/; max-age=0; SameSite=Lax";
        localStorage.removeItem('jwt');
        window.location.href = '/';
    }


    const elemen = [
        {
            title: "Bagaimana Cara Mengolah Sampah yang Benar?",
            source: "Waste2Feed",
            img: "/static/food-waste-wasted-fruit-and-vegetables.jpg",
            url: "https://www.google.com"
        },
        {
            title: "Bagaimana Cara Yapping pada matkul PAI yang Benar?",
            source: "Waste2Feed",
            img: "/static/vegetable.png",
            url: "https://www.google.com"
        },
        {
            title: "Get the popular gun Now",
            source: "Steam",
            img: "/static/wallpaper.jpg",
            url: "https://store.steampowered.com/app/730/CounterStrike_2/"
        },
        ];

        const swiper = document.getElementById("swiperTarget");

        elemen.forEach(({ title, source, img, url }) => {
        const slide = document.createElement("swiper-slide");
        slide.innerHTML = `
                <div class="relative flex bg-white rounded-xl overflow-hidden w-full h-40">
                    <img
                    class="absolute inset-0 w-full h-full object-cover mask-t-from-10% opacity-90 z-10"
                    src="${img}" alt="${title}" />
                    <div class="relative z-20 p-4 text-white">
                    <div class="text-xl text-[#0B4619] font-bold">${title}</div>
                    <a href="${url}" target="_blank" rel="noopener noreferrer"class="text-xs text-black hover:underline inline-flex items-center gap-1">${source}<i class="fa fa-external-link text-[10px] relative top-[1px]" aria-hidden="true"></i></a>

                </div>
                `;
                swiper.appendChild(slide);
            });
            
    </script>
        <script
            src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
    </body>
</html>